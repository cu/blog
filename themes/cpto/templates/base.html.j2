      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="{{ FEED_ALL_ATOM }}" rel="alternate" title="{{ SITENAME }}" type="application/atom+xml">
    <link href="{{ FEED_ALL_RSS }}" rel="alternate" title="{{ SITENAME }}" type="application/rss+xml">
  {% endblock %}
  </head>
  <body>

    <div class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          {#
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          #}
          <a class="navbar-brand" href="{{ SITEURL }}/">{{ SITENAME }}</a>
        </div>
{# XXX doesn't work and not used right now anyway
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            {% for page in NAV_PAGES %}
            <li {%- if output_file == page.url %} class="selected"{% endif %}><a href="{{ SITEURL }}/{{ page.url }}">{{ page.title }}</a></li>
            {% endfor %}
<!--
            <li class="active"><a href="index.html">Home</a></li>
            <li><a href="about.html">About Us</a></li>
            <li><a href="calendar.html">Calendar</a></li>
-->
            <!--
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Fundraising <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Boxtops for Education</a></li>
                <li><a href="#">Grocery Rewards</a></li>
                <li><a href="#">Scrip Cards</a></li>
                <li><a href="#">Spirit Wear</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">Nav header</li>
                <li><a href="#">Separated link</a></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
            -->
          </ul>
        </div><!--/.nav-collapse -->
#}
      </div>
    </div>

    <div class="container" id="header">
    <!-- reserved for header -->
    </div>

    <div class="container">

      <div class="row">

        <div class="col-sm-8 blog-main">

          {% block content %}{% endblock %}

        </div><!-- /.blog-main -->

        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
          <div class="sidebar-module">
            <h4>About Me</h4>
            <p>Charles is a SysAdmin/DevOps type, a fan of open source software,
            and tinkerer of things on the workbench and in the shop. He is
            located in the Ann Arbor area and enjoys talking about himself in
            the third person.
            </p>
          </div>

          <div class="sidebar-module">
            <h4>Connect</h4>
              <a href="https://twitter.com/charles_u"><img src="{{ SITEURL }}/theme/twitter.png" width="24" height="24"></a>
              <a href="https://github.com/cu"><img src="{{ SITEURL }}/theme/github.png" width="24" height="24"></a>
              <a href="https://lobste.rs/u/bityard"><img src="{{ SITEURL }}/theme/lobsters.png" width="24" height="24"></a>
          </div>

          <div class="sidebar-module">
            <h4>Topics</h4>
            {% for tag, _ in tags|sort %}
              <a href="{{ SITEURL }}/{{ tag.url }}">{{ tag }}</a>,
            {% endfor %}
            <a href="{{ SITEURL }}/tags.html">(All Topics)</a>
          </div>
 
          <div class="sidebar-module">
            <h4>Archives</h4>
            <ol class="list-unstyled">
            {% set year_list = [] %}
            {% for article in dates %}
              {% set year = article.date|strftime('%Y') %}
              {% if year not in year_list %}
                <li><a href="{{ SITEURL }}/articles/{{ year }}/">{{ year }}</a></li>
              {% set year_list = year_list.append(year) %}
              {% endif %}
            {% endfor %}
            </ol>
          </div>

          <div class="sidebar-module">
            <h4>Subscribe</h4>
            <ol class="list-unstyled">
            <li><a href="{{ FEED_DOMAIN }}/{{ FEED_ALL_ATOM }}">Atom</a>
            <li><a href="{{ FEED_DOMAIN }}/{{ FEED_ALL_RSS }}">RSS</a>
            </ol>
          </div>
        </div><!-- /.blog-sidebar -->

      </div><!-- /.row -->

    </div><!-- /.container -->

    <div class="footer">
      <p>
        Â© 2008-<script>document.write(new Date().getFullYear())</script>
        Bityard Industries
     </p>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
